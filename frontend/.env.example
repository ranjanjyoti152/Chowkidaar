# Chowkidaar NVR - Frontend Environment Configuration
# Copy this file to .env and configure for your edge device

# =============================================================================
# BACKEND SERVER CONFIGURATION
# =============================================================================
# URL of the Chowkidaar backend server
VITE_API_BASE_URL=http://192.168.1.100:8000/api/v1

# WebSocket URL for real-time streams and updates
VITE_WS_BASE_URL=ws://192.168.1.100:8000/ws

# =============================================================================
# EDGE DEVICE CONFIGURATION
# =============================================================================
# Unique identifier for this edge device (auto-generated if empty)
VITE_DEVICE_ID=

# Device location/name (for display purposes)
VITE_DEVICE_NAME=Edge-Device-1

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Default refresh interval for stats (milliseconds)
VITE_REFRESH_INTERVAL=5000

# Enable/disable animations (set to false for low-power devices)
VITE_ENABLE_ANIMATIONS=true

# =============================================================================
# DEBUG/DEVELOPMENT
# =============================================================================
# Enable debug mode
VITE_DEBUG=false
